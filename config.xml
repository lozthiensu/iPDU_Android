<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iPDU</name>
    <description>
        Ứng dụng đọc tin tức trường Đại học Phạm Văn Đồng.
    </description>
    <author email="quangbao1994@gmail.com" href="http://google.com.vn">
        Kakalot
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <icon density="ldpi" src="www/androidRes/36.png" />
        <icon density="mdpi" src="www/androidRes/48.png" />
        <icon density="hdpi" src="www/androidRes/72.png" />
        <icon density="xhdpi" src="www/androidRes/96.png" />
        <icon density="xxhdpi" src="www/androidRes/144.png" />
        <icon density="xxxhdpi" src="www/androidRes/192.png" />
        <splash density="port-ldpi" src="www/androidRes/200x320.png" />
        <splash density="port-mdpi" src="www/androidRes/320x480.png" />
        <splash density="port-hdpi" src="www/androidRes/480x800.png" />
        <splash density="port-xhdpi" src="www/androidRes/720x1280.png" />
        <splash density="port-xxhdpi" src="www/androidRes/960x1600.png" />
        <splash density="port-xxxhdpi" src="www/androidRes/1280x1920.png" />
    </platform>
    <preference name="xwalkVersion" value="org.xwalk:xwalk_core_library:15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
